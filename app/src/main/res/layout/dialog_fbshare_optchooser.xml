<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/idTvFbShareOptDlgTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <Button
            android:id="@id/idBtnSimpleDlgCloseX"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/simple_pink_button_bg"
            android:text="@string/str_simple_dlg_close_sign"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@id/idTvFbShareOptDlgOpt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fb_shareopt_dialog_bg"
        android:padding="15dp"
        android:textSize="17sp" />

    <TextView
        android:id="@id/idTvFbShareOptDlgOpt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fb_shareopt_dialog_bg"
        android:padding="15dp"
        android:textSize="17sp" />

    <TextView
        android:id="@id/idTvFbShareOptDlgOpt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fb_shareopt_dialog_bg"
        android:padding="15dp"
        android:textSize="17sp" />

</LinearLayout>